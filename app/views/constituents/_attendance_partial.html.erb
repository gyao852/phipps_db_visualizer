<div class='card bg-white show-constituent-attendance-history'>
      <h4 class='card-header'>Attendance History</h4>
      <div class='card-body'>
        <% if @constituent.constituent_events.empty? %>
          <p>No records</p>
        <% else %>
          <table class='table table-sm table-hover table-bordered sortable'>
              <thead>
                  <th scope="col">Event Name</th>
                  <th scope="col">Start Date</th>
                  <th scope="col">End Date</th>
                  <th scope="col">RSVP</th>
                  <th scope="col">Attended</th>
              </thead>
              
              <tbody>
                  <% @constituent.constituent_events.each do |ce| %>
                    <tr>
                      <td><%= ce.event.event_name %></td>
                      <td><%= ce.event.start_date_time.nil? ? 'N/A' : ce.event.start_date_time.strftime('%m/%d/%y') %></td>
                      <td><%= ce.event.end_date_time.nil? ? 'N/A' : ce.event.end_date_time.strftime('%m/%d/%y') %></td>
                      <td><%= ce.status %></td>
                      <td><%= ce.attend %></td>
                    </tr>
                  <% end %>
              </tbody>
          </table>
        <% end %>
      </div>
    </div>