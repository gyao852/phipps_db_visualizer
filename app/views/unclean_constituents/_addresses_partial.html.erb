<div class='card bg-white show-constituent-addresses'>
    <h4 class="card-header">Addresses</h4>
    <div class="card-body">
    <% if @unclean_constituent.unclean_addresses.empty? %>
        No records
    <% else %>
        <table class='table table-sm table-bordered table-hover'>
        <thead>
            <tr>
            <th scope='col'>Street</th>
            <th scope='col'>City</th>
            <th scope='col'>State</th>
            <th scope='col'>Country</th>
            <th scope='col'>Zip Code</th>
            <th scope='col'>Type</th>
            <th scope='col'>Date Added</th>
            </tr>
        </thead>

        <tbody>
            <% @unclean_constituent.unclean_addresses.each do |ca| %>
            <tr>
                <td><%= ca.address_1 %></td>
                <td><%= ca.city %></td>
                <td><%= ca.state%></td>
                <td><%= ca.country %></td>
                <td><%= ca.zip %></td>
                <td><%= ca.address_type%></td>
                <td><%= ca.date_added.nil? ? 'N/A' :  ca.date_added.strftime('%m/%d/%y')%></td>
            </tr>
            <% end %>
        </tbody>
        </table>
    <% end %>
    </div>
</div>